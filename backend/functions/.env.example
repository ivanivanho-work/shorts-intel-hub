# Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# For production (Cloud SQL with Connector)
CLOUD_SQL_CONNECTION_NAME=your-project:your-region:shorts-intel-hub-db

# For local development (via Cloud SQL Proxy)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_NAME=shorts_intel_hub

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
FIREBASE_PROJECT_ID=your-firebase-project-id

# ============================================================================
# GOOGLE CLOUD CONFIGURATION
# ============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# ============================================================================
# CLOUD STORAGE
# ============================================================================
STORAGE_BUCKET=your-project-uploads

# ============================================================================
# GEMINI AI CONFIGURATION
# ============================================================================
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro

# ============================================================================
# MCP BRIDGE CONFIGURATION
# ============================================================================
MCP_BRIDGE_URL=https://your-agent-collective-url
MCP_BRIDGE_API_KEY=your-mcp-api-key

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_BASE_URL=http://localhost:5001
CORS_ORIGIN=http://localhost:3000

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=20
